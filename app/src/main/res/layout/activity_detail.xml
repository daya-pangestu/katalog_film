<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".view.DetailActivity">

    <ImageView
        android:id="@+id/detailImgPoster"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/detailTxtJudul"
        app:layout_constraintHorizontal_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/detailTxtJudul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="judul"
        android:textStyle="bold"
        android:layout_alignTop="@id/detailImgPoster"
        android:layout_toEndOf="@id/detailImgPoster"
        app:layout_constraintTop_toBottomOf="@id/detailImgPoster"
        app:layout_constraintStart_toStartOf="@id/detailImgPoster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="98dp"
        android:layout_toRightOf="@id/detailImgPoster" />

    <TextView
        android:id="@+id/detailTxtDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="243dp"
        android:maxLines="4"
        app:layout_constraintStart_toStartOf="@id/detailTxtJudul"
        app:layout_constraintEnd_toEndOf="@id/detailTxtJudul"
        app:layout_constraintTop_toBottomOf="@id/detailTxtJudul"
        />

</androidx.constraintlayout.widget.ConstraintLayout>